{
  "appenders": {
    "out": {
      "type": "stdout"
    },
    "tcStats": {
      "type": "file",
      "filename": "log/tcStats.log",
      "maxLogSize": 20000000
    },
    "vrapi": {
      "type":"file",
      "filename":"log/vrapi.log",
      "maxLogSize": 20000000
    },
    "itfapi": {
      "type":"file",
      "filename":"log/itfapi.log",
      "maxLogSize": 20000000
    }
  },
  "categories": {
    "default": {
      "appenders": [
        "out",
        "tcStats"
      ],
      "level": "info"
    },
    "vrapi": {
      "appenders": [
        "vrapi"
      ], "level": "info"
    },
    "itfapi": {
      "appenders": [
        "out",
        "itfapi"
      ], "level": "info"
    }
  }
}
