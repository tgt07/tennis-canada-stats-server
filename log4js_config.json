{
  "appenders": {
    "out": {
      "type": "stdout"
    },
    "tcStats": {
      "type": "dateFile",
      "filename": "log/tcStats.log",
      "pattern": "-yyyy-MM-dd"
    },
    "vrapi": {
      "type":"dateFile",
      "filename":"log/vrapi.log",
      "pattern": "-yyyy-MM-dd"
    }
  },
  "categories": {
    "default": {
      "appenders": [
        "out",
        "tcStats"
      ],
      "level": "info"
    },
    "vrapi": {
      "appenders": [
        "vrapi"
      ], "level": "info"
    }
  }
}